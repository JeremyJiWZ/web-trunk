	<!--log4j -->
	<context-param>
		<param-name>log4jConfigLocation</param-name>
		<param-value>classpath:/log4j.properties</param-value>
	</context-param>

	<!--session过期时间 -->
	<session-config>
		<session-timeout>1440</session-timeout>
	</session-config>
</web-app>